  .large-8.columns
    = simple_form_for [:frontend, @contact_form] , remote: true do |f|
      =f.input :name
      =f.input :email
      =f.input :message , :as => 'text'
      =f.submit "Send Message" , :class => 'button expand' ,  data: { disable_with: "Sending message..." }
